
#include <iostream> 
#include <fstream> 
#include <iomanip> 

using namespace std;

int main() {
	
	int year = 1;
	double sal = 20000;

	cout << fixed << setprecision(2);
	cout << "Year\t\tSalary \n";
	cout << "-----------------------------\n";
	cout << year << "\t\t" << sal << '\n';

	while (sal <= 50000)
	{
		sal = sal + (sal * .1);
		year++;
		cout << year << "\t\t" << sal << '\n';
	}

	system("pause");
	return 0;
}
